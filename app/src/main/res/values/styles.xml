<resources>

    <!-- Base application theme. -->
    <style name="ComaCertoAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="ComaCertoAppTheme_NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>
    <!-- component styles -->

    <style name="BottomNavigationViewStyle">
        <item name="android:background">@color/primary</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="divider">
        <item name="android:height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme_Dialog" parent="Base.Theme.AppCompat.Dialog">
    </style>

    <style name="DefaultTitle" >
        <item name="background">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="DialogTitle">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center</item>

    </style>
</resources>
