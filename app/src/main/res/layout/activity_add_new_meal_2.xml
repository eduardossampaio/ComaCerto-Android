<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.meals.register.AddNewMealActivity">
    <LinearLayout
        android:background="@color/primary"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:text="@string/add_new_meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_card_view_meal_type" />

            <View
                android:background="#9c000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <include layout="@layout/layout_card_view_when_ate" />

            <View
                android:background="#9c000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <include layout="@layout/layout_card_view_what_i_ate" />

            <View
                android:background="#9c000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <include layout="@layout/layout_card_view_what_doing" />

            <View
                android:background="#9c000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <include layout="@layout/layout_card_view_how_i_feel" />

            <View
                android:background="#9c000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <include layout="@layout/layout_card_view_hunger_level" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>