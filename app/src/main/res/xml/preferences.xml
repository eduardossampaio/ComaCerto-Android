<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/preference_category_reminders">
        <SwitchPreference
            android:icon="@drawable/pref_icon_reminder"
            android:key="PREFERENCE_ENABLE_REMINDER"
            android:summary="@string/preferences_enable_reminder_summary"
            android:title="@string/preferences_enable_reminder" />

        <Preference
            android:key="PREFERENCE_BREAKFAST_REMINDER_TIME"
            android:summary="@string/preferences_reminder_breakfast_summary"
            android:title="@string/preferences_reminder_breakfast" />

        <Preference
            android:key="PREFERENCE_LUNCH_REMINDER_TIME"
            android:summary="@string/preferences_reminder_lunch_summary"
            android:title="@string/preferences_reminder_lunch" />

        <Preference
            android:key="PREFERENCE_SNACK_REMINDER_TIME"
            android:summary="@string/preferences_reminder_snack_summary"
            android:title="@string/preferences_reminder_snack" />

        <Preference
            android:key="PREFERENCE_DINNER_REMINDER_TIME"
            android:summary="@string/preferences_reminder_dinner_summary"
            android:title="@string/preferences_reminder_dinner" />
    </PreferenceCategory>

</PreferenceScreen>